<Page
    x:Class="RssFeed.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RssFeed"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:ConnectionId='1' x:Name="listView" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"                                IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Title}"></TextBlock>
                            <TextBlock Text="{Binding Heading}"></TextBlock>
                            <TextBlock Text="{Binding Description}"></TextBlock>
                            <TextBlock Text="{Binding Story}"></TextBlock>
                            <Image Width="200">
                                <Image.Source>
                                    <BitmapImage UriSource="{Binding ImgUrl}" />
                                </Image.Source>
                            </Image>
                            <TextBlock Text="{Binding ImgUrl}"></TextBlock>
                            <TextBlock Text="{Binding Nav}"></TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>

